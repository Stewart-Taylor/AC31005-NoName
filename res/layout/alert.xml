<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical" android:paddingLeft="4sp">

        <TextView
            android:id="@+id/lbl_alert_tile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/alert_tile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" >
</TextView>

        <View android:id="@+id/Divider0" android:background="#AFC7E8" android:layout_height="4sp" android:layout_width="wrap_content"></View>
        <View android:id="@+id/View01" android:background="#AFC7E8" android:layout_width="fill_parent" android:layout_height="4sp"></View>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="	Shares		"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
        <View android:id="@+id/View03" android:background="#AFC7E8" android:layout_width="fill_parent" android:layout_height="4sp"></View>
       <ListView android:layout_weight="1" android:id="@+id/android:list" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="#000826" android:cacheColorHint="#000826"></ListView>
    </LinearLayout>
      </RelativeLayout>