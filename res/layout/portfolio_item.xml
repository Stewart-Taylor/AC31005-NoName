<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="30dip" >

    <TextView
        android:id="@+id/lbl_sharename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share_Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFD100" />

    <TextView
        android:id="@+id/lbl_share_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Share Set"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#23cf34" />

    <TextView
        android:id="@+id/lbl_extra_shareinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Info"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFF8C" />

</LinearLayout>